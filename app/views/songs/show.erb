<% if @new %>
  "Successfully created song."
<% end %>
<% if @update %>
  "Successfully updated song."
<% end %>

<h1><%= @song.name %></h1>
<h2>by
  <a href="/artists/<%= @song.artist.slug %>">
    <%= @song.artist.name %>
  </a>
</h2>
<ul>
  <% @song.genres.each do |genre| %>
    <li>
      <a href="/genres/<%= genre.slug %>">
        <%= genre.name %>
      </a>
    </li>
  <% end %>
</ul>